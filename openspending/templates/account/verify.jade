{% extends "base.jade" %}

{% block page_title %}Login{% endblock %}

{% block optional_head %}


{% endblock %} 

{% block content %}
h2.page-header Sign into Find.  This is under development, so it looks pretty ugly.  We are working hard to bring a polished style to you soon.

div.container
  div.row
    div.span6
      h3 Choose Password
        {% formfill form_fill with form_errors %}
        form.basic.register.form-horiztonal(id="register", action="{{ url_for('account.verify') }}", method="POST")
          fieldset
            h3 Welcome Back, {{ account.fullname }}
            h4 {{ error }}
            div.control-group.form-inline
              label(for="password1") Password
              div.controls
                input(name="password1", type="password", autocomplete="off")
            div.control-group.form-inline
              label(for="password2") Password (repeated)
              div.controls
                input(name="password2", type="password", autocomplete="off")
            input(value="", type="hidden", name="loginhash")
            div.form-actions
              input.btn.btn-primary(value="Create new account", type="submit")
        {% endformfill %}


{% endblock %}




