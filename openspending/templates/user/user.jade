{% extends "base.jade" %}

{% block page_title %}User{% endblock %}


{% block banner %}

{% endblock %}



{% block optional_head %}
link(href="{{ static_path('find-ui/bower_components/jquery-ui/themes/smoothness/jquery-ui.css') }}", rel='stylesheet')
link(href="{{ static_path('find-ui/dist/app/css/user.css') }}", rel='stylesheet')
{% endblock %}

{% block content %}
.flash
  p {{ message }}
.container.content-text
  .row
    .col-md-12
      .row
        h1 User Profile
      .row
        p
      .row
        p This is the user profile page.
        p This is meant to show the framework of how we can handle this and is not the final / production version.
      .row
        h2 Saved Data Views
        table.dv_table
          {% for views in dataviews %}
          {% if loop.first %}
          tr
            th Created Date
            th Visualization URL
            th Action
          {% endif %}
          tr
            td {{ views.created_at }}
            td 
              a(href="/data-visualization{{ views.settings.hash }}"){{ views.settings.hash }}
            td.center
              a(href="/user/removedv/{{ views.id }}") X
          {% else %}
          tr
            td(colspan=5).no-border.no-dv-yet You have not saved any dataviews yet.
          {% endfor %}
{% endblock %}

{% block footer_scripts %}

script(src="{{ static_path('find-ui/bower_components/jquery-ui/jquery-ui.js') }}")
script(src="{{ static_path('find-ui/dist/app/js/user/user.js') }}")

{% endblock %}






