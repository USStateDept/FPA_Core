// Fixed navbar
nav.navbar.navbar-default.navbar-fixed-top
  .container
    .navbar-header
      button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navbar', aria-expanded='false', aria-controls='navbar')
        span.sr-only Toggle navigation       
        span.icon-bar   
        span.icon-bar     
        span.icon-bar
      a.navbar-brand(href="{{ url_for('home.index') }}") FIND
    #navbar.navbar-collapse.collapse
      ul.nav.navbar-nav
        li
          a(href="{{ url_for('indicators.categories') }}") INDICATORS
        li
          a(href='#about') USER STORIES
      ul.nav.navbar-nav.navbar-right
        {% if logged_in %}
        li.dropdown
          a.dropdown-toggle(data-toggle='dropdown')
            strong {{ current_user.fullname }}
          ul.dropdown-menu.account-dropdown
            li
              a(href="{{ url_for('account.dashboard') }}") Dashboard
            li
              a(href="{{ url_for('account.settings') }}") Settings
            {% if current_user.is_admin %}
            li.divider
            li
              a(href="{{ url_for('account.scoreboard') }}") User scoreboard
            {% endif %}
            li.divider
            li
              a(href="{{url_for('account.logout')}}") Logout
          {% else %}
          li
            a(href="{{url_for('account.login')}}") Login/Register (USG Only)
          {% endif %}



