@font-face
	font-family 'fa-icons'
	src url('../fonts/fa-icons.eot')
	src url('../fonts/fa-icons.eot?#iefix') format('embedded-opentype'),
		url('../fonts/fa-icons.woff') format('woff'),
		url('../fonts/fa-icons.ttf') format('truetype'),
		url('../fonts/fa-icons.svg#faicons') format('svg');
	font-weight 300
	font-style normal

html, body
	//min-height 2000px
	padding-top 30px
	font-family $family
	
.app a
	color $links

.app .navbar-default
	background-color $bgMedium
	
	.navbar-nav > .active > a
		background-color $bgDark

	.navbar-nav > .active > a,
	.navbar-nav > li > a
		color $colorLight
		font-weight $weightMedium
		font-size $sizeMenu
		font-style normal
		
		
	
	.navbar-nav > li:nth-child(2) > a
		font-weight $weightLight

.app .navbar-brand
	color $colorLight
	font-weight $weightMedium
	font-style normal
	font-size $sizeBrand
	padding 20px
	
.app .navbar-collapse.collapse
	height $heightHeader !important
	
.app .bg-none
	background none
	
.app .bg-light
	background-color $bgLight
	
.app .bg-dark
	background-color $bgDark
	
.app .bg-medium
	background-color $bgMedium
	
.app .font-light
	color $colorLight
	
.app .font-dark
	color $colorDark
	
.app .well
	border-radius $radius0
	border none
	box-shadow none
	
	.glyphicon
		width 100%
		text-align center
		font-size 40px
	
.app img
	width 100%
	height auto
	max-width 150px
	
.app .center-me
	//text-align center
	
.app .bg-container
	background-color $bgContainer
	
.app .font-large
	font-size $sizeBrand
	
.app .bg-none
	background none
	
.app .map-bg
	background url(../images/map.png) center center no-repeat
	
.app .jumbotron	
	border-radius $radius0
	
	h1
		font-size 48px
		font-weight $weightLight
		font-style normal
		color $colorLight
		text-align center
		padding-bottom 20px
	p
		font-weight $weightLight
		font-style normal
		color $colorLight
		text-align center
		
	.search-group
		color $colorDark
		
	.btn-group
		width 100%
		height 60px
		
	.btn
		width 33.33%
		height 100%
		line-height 40px
		
	.form-control-feedback
		width 60px
		height 68px
		line-height 60px
		font-size 34px
		left 10px
		
	.main-search
		width 100%
		padding 6px
		padding-left 60px
		font-size 34px
		font-weight $weightLight
		font-style normal
		border-radius $radius0
		border 1px solid $bgDark
		
	.main-search-results
		padding 10px
		& span
			background-color $bgContainer			
			padding 5px
			margin 5px
			display inline-block
			cursor pointer
		

	

.app .footer
	
	h1
		font-size 36px
		font-weight $weightLight
		font-style normal
		color $colorLight
		text-align center
		padding-bottom 20px
		
	.updates
		
		ul			
			color $colorLight
			font-size 22px
			
	#data-stories
		
		h3
			color $colorLight
			
		
.app .footer-links
	font-weight $weightLight
	font-size $sizeFooter
	font-style normal
	
		
	.nav > li > a
		padding 0px
		color $colorLight
		
	.nav > li > a:hover
		background none
	
	ul li:not(:last-child)
		border-right 1px solid #FFF
		margin-right 20px
		padding-right 20px
		
.app .btn-default
	border-top none
	border-left none
	border-right none
	border-radius $radius0
	color $bgMedium
	//font-size 28px
	font-weight $weightMedium
	
.app .btn-group:nth-child(2)
	border-left 1px solid #ccc
	

.app .category-wrapper .badge
	position absolute
	top -5px
	right 5px
	background-image -webkit-linear-gradient(top, $bgLight, $bgDark)
	border 1px solid $bgDark


.row.vdivide [class*='vdivide col-']:not(:last-child):after
	background #e0e0e0
	width 1px
	content ""
	display block
	position absolute
	top 0
	bottom 0
	right 0
	min-height 70px
	
	
#sticky.stick
	position fixed
	top 60px
	z-index 10000
	border-radius 0 0 0.5em 0.5em
	min-width 50%
	
	input,
	.main-search-results span
		box-shadow 0 5px 10px rgba(0,0,0,.2)
	
.carousel-indicators
	bottom 0px

	& li
		border 2px solid $colorDark
		
.carousel-control
	background-image url() !important
	display none
	
#data-stories
	& h1
		color #FFF
		
.carousel-fade
	
	.carousel-inner
		
		.item
			opacity 0
			transition-property opacity
			
		.item.active
			opacity 1
		
	.active.left,
	.active.right
		left 0
		opacity 0
		index 1
		
	.next.left,
	.prev.right
		opacity 1

		
/****** MEDIA QUERIES ************/
	
//small
@media (min-width: 768px)
	
	.app .jumbotron
		padding 10px
		
	.navbar-nav > li > a
		padding 20px
		
	.category-wrapper
		height 210px

//medium
@media (min-width: 992px)

	.category-wrapper
		height 210px


//large
@media (min-width: 1200px)

	.category-wrapper
		height 210px

